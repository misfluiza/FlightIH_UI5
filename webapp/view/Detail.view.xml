<mvc:View controllerName="flightui5ih.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:m="sap.m">
 
	<ObjectPageLayout id="ObjectPageLayout"
					 showTitleInHeaderContent="true"
					alwaysShowContentHeader="false"
					preserveHeaderStateOnScroll="false"
					headerContentPinnable="true"
					isChildPage="true"
					upperCaseAnchorBar="false">
				<headerTitle>
					<ObjectPageDynamicHeaderTitle id="_IDGenObjectPageDynamicHeaderTitle1">
						<expandedHeading>
							<m:Title id="_IDGenTitle" text="{flightdetailDataModel>/Carrname}" wrapping="true" class="sapUiSmallMarginEnd"/>
						</expandedHeading>

						<snappedHeading>
							<m:FlexBox id="_IDGenFlexBox" wrap="Wrap" fitContainer="true" alignItems="Center">
								<m:FlexBox id="_IDGenFlexBox1" wrap="NoWrap" fitContainer="true" alignItems="Center" class="sapUiTinyMarginEnd">
									<m:Avatar id="_IDGenAvatar" src="../../../../../../../{products>ProductPicUrl}" displaySize="S" displayShape="Square"/>
									<m:Title id="_IDGenTitle1" text="{flightdetailDataModel>Carrname}" wrapping="true" class="sapUiTinyMarginEnd"/>
								</m:FlexBox>
							</m:FlexBox>
						</snappedHeading>

						<navigationActions>
							<m:OverflowToolbarButton id="_IDGenOverflowToolbarButton" type="Transparent" icon="sap-icon://full-screen" press="handleFullScreen" tooltip="Enter Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/fullScreen} !== null }"/>
							<m:OverflowToolbarButton id="_IDGenOverflowToolbarButton1" type="Transparent" icon="sap-icon://exit-full-screen" press="handleExitFullScreen" tooltip="Exit Full Screen Mode" visible="{= ${/actionButtonsInfo/midColumn/exitFullScreen} !== null }"/>
							<m:OverflowToolbarButton id="_IDGenOverflowToolbarButton2" type="Transparent" icon="sap-icon://decline" press="handleClose"  tooltip="Close column" visible="{= ${/actionButtonsInfo/midColumn/closeColumn} !== null }"/>
						</navigationActions>

					</ObjectPageDynamicHeaderTitle>
				</headerTitle>

				<headerContent>
					<m:FlexBox id="_IDGenFlexBox2" wrap="Wrap" fitContainer="true" alignItems="Stretch">
						<m:Avatar id="_IDGenAvatar1" 
						src="{path: 'flightdetailDataModel>/Carrid', formatter: '.formatter.formatImage'}"
								  displaySize="L"
								  displayShape="Square"
								  class="sapUiTinyMarginEnd">
						</m:Avatar>
						<m:VBox id="_IDGenVBox" justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label id="_IDGenLabel" text="Airline ID"/>
							<m:Text id="_IDGenText3" text="{flightdetailDataModel>/Carrid}"/>
						</m:VBox>
						<m:VBox id="_IDGenVBox1" justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label id="_IDGenLabel1" text="Url"/>
							<m:Text id="_IDGenText6" text="{= ${flightdetailDataModel>/Url} ? ${flightdetailDataModel>/Url} : ('www.'+ ${flightdetailDataModel>/Carrname} + '.com')}"/>
						</m:VBox>
						<m:VBox id="_IDGenVBox2" justifyContent="Center" class="sapUiSmallMarginEnd">
							<m:Label id="_IDGenLabel2" text="Currency"/>
							<m:ObjectNumber id="_IDGenObjectNumber" number="{flightdetailDataModel>/Currcode}" emphasized="false"/>
						</m:VBox>
					</m:FlexBox>
				</headerContent>
<sections>
			<ObjectPageSection id="_IDGenObjectPageSection" title="General Information">
				<subSections>
					<ObjectPageSubSection id="_IDGenObjectPageSubSection">
						<blocks>
							<m:Table id="_IDGenTable2"
		items="{
			path: 'flightdetailDataModel>/to_DetailsIH/results',
			sorter: {
				path: ''
			}
		}">

		<m:columns>
			<m:Column id="_IDGenColumn1" >
				<m:Text id="_IDGenText4"  text="{i18n>connid}" />
			</m:Column>
			<m:Column id="_IDGenColumn2" >
				<m:Text id="_IDGenText5"  text="{i18n>Fldate}" />
			</m:Column>
            <m:Column id="_IDGenColumn3"  >
				<m:Text id="_IDGenText9"  text="{i18n>Price}" />
			</m:Column>
            <m:Column id="_IDGenColumn4"  >
				<m:Text id="_IDGenText10"  text="{i18n>Currency}" />
			</m:Column>

		</m:columns>
		<m:items>
			<m:ColumnListItem id="_IDGenColumnListItem1" highlight="{= ${flightdetailDataModel>SeatsMax} > 200 ? 'Success' : ${flightdetailDataModel>SeatsMax} > 20 ? 'Warning' :'Error' }" vAlign="Middle" type="Inactive">
				<m:cells>
					<m:Text id="_IDGenText7"   text="{flightdetailDataModel>Connid}"  wrapping="false"/>
					<m:Text id="_IDGenText91"  text="{path: 'flightdetailDataModel>Fldate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'MM/dd/yyyy' }}" wrapping="false"/>
					<m:Text id="_IDGenText11"  text="{flightdetailDataModel>Price}" />
					<m:Text id="_IDGenText12"  text="{flightdetailDataModel>Currency}" />
				</m:cells>
			</m:ColumnListItem>
		</m:items>
	</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
		</ObjectPageLayout>
</mvc:View>